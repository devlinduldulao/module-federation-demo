{
  "name": "module-federation-demo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:all": "npm install && (cd packages/shell && npm install) && (cd packages/products && npm install) && (cd packages/cart && npm install) && (cd packages/dashboard && npm install)",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:shell": "cd packages/shell && npm run dev",
    "dev:products": "cd packages/products && npm run dev",
    "dev:cart": "cd packages/cart && npm run dev",
    "dev:dashboard": "cd packages/dashboard && npm run dev",
    "build": "concurrently \"npm:build:*\"",
    "build:shell": "cd packages/shell && npm run build",
    "build:products": "cd packages/products && npm run build",
    "build:cart": "cd packages/cart && npm run build",
    "build:dashboard": "cd packages/dashboard && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "postinstall": "npm run install:packages",
    "install:packages": "cd packages/shell && npm install && cd ../products && npm install && cd ../cart && npm install && cd ../dashboard && npm install"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "jsdom": "^28.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
